<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <script src='../../js/jquery-2.1.1.min.js'></script>
    </head>
    <body>
        <script>
        $(function(){
            $('.postDel').on('click', function(event){
                var ok = confirm('Вы действительно хотите удалить этот пост?');
                if(ok) {
                    var postID = $(event.target).attr('postid');
                    $(event.target).closest('table[postid='+ postID + ']').remove();
                }
            });       
        })

        </script>
        <center>
            <%= content %>
            <table border = 1>
                <tr>
                    <td>
                        <table>
                            <tr><td>
                                <form method='GET' action='<%= url_for "post_form_create" %>'>
                                      <input type='submit' value='Создать пост'/>     
                                </form>
                            </td></tr> 
                            <tr><td>
                             --------------  
                            </td></tr>
                            <tr><td>
                                <form method='GET' action='<%= url_for "post_form_delete" %>'>
                                      <input type='submit' value='Удалить пост'/>     
                                </form>
                            </td></tr> 
                            <tr><td>
                            --------------
                            <tr><td>
                                <form method='GET' action='<%= url_for "tag_form_create" %>'>
                                      <input type='submit' value='Добавить тег'/>     
                                </form>
                            </td></tr> 
                            <tr><td>
                            --------------
                            <tr><td>
                                <form method='GET' action='<%= url_for "tag_form_delete" %>'>
                                      <input type='submit' value='Удалить тег'/>     
                                </form>
                            </td></tr> 
                            <tr><td>
                            --------------
                            <tr><td>
                                <form method='GET' action='<%= url_for "category_form_create" %>'>
                                      <input type='submit' value='Добавить категорию'/>     
                                </form>
                            </td></tr> 
                            <tr><td>
                            --------------
                            <tr><td>
                                <form method='GET' action='<%= url_for "category_form_delete" %>'>
                                      <input type='submit' value='Удалить категорию'/>     
                                </form>
                            </td></tr> 
                            <tr><td>
                            --------------
                            <tr><td>     
                                <form method='POST' action='<%= url_for "auths_delete" %>'>
                                      <input type='submit' value='Exit'/>     
                                </form>
                            </td></tr> 
                        </table>
                    </td>
                    <td> 
                        <table>
                            % for( my $i = 0; $i < scalar keys $posts; $i++) {
                            <table postid=<%=
                                $posts->[$i]->{'id'};
                            %>>
                                <tr><td>
                                    <a href="<%=
                                            '/post/show/' . $posts->[$i]->{'id'};
                                    %>">
                                        <h2 style="color: green">
                                            <%=
                                                $posts->[$i]->{'title'};
                                            %>
                                        </h2>
                                    </a>
                                </td></tr>
                                <tr><td style="word-wrap: break-word;">
                                    <div style="width : 500px;"><%=
                                        $posts->[$i]->{'preview'};
                                    %>
                                    </div>
                                </td></tr>
                                % if(1) {
                                <tr >
                                    <td align="right">                                     
                                       <input type='submit' class="postDel" value='Удалить' postid=<%=
                                            $posts->[$i]->{'id'};
                                        %> />
                                    </td>
                                </tr>
                                 %}
                                <tr><td>
                                    ----------------------------------------------------------------------------------
                                </td></tr>   
                            </table>
                            % }
                        </table>
                    </td>
                </tr>
            </table>

        </center>
    </body>
</html>
